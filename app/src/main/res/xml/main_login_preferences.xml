<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nl.geekk.taskmanager.view.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <PreferenceCategory
        android:title="Login">
        <CheckBoxPreference
            android:key="@string/sp_first_login"
            android:title="@string/sp_first_login" />

        <CheckBoxPreference
            android:key="@string/sp_remember_login"
            android:title="@string/sp_remember_login"/>

        <EditTextPreference
            android:key="@string/sp_user_id"
            android:title="@string/sp_user_id"/>

        <EditTextPreference
            android:key="@string/sp_api_key"
            android:title="@string/sp_api_key"/>

        <EditTextPreference
            android:key="@string/sp_first_name"
            android:title="@string/sp_first_name"/>

        <EditTextPreference
            android:key="@string/sp_last_name"
            android:title="@string/sp_last_name"/>

        <EditTextPreference
            android:key="@string/sp_date_edited"
            android:title="@string/sp_date_edited"/>

        </PreferenceCategory>
</PreferenceScreen>